package com.exercicios.springweb.estudantes;

import org.springframework.web.bind.annotation.*;
import java.util.ArrayList;
import java.util.List;

@RestController
@RequestMapping("/estudantes")
public class EstudanteController {

    private final List<Estudante> estudantes = new ArrayList<>();

    @PostMapping
    public Estudante cadastrar(@RequestBody Estudante estudante) {
        estudantes.add(estudante);
        return estudante;
    }

    @GetMapping
    public List<Estudante> listar() {
        return estudantes;
    }

    @GetMapping("/{codigo}")
    public Estudante buscarPorCodigo(@PathVariable int codigo) {
        return estudantes.stream()
                .filter(e -> e.getCodigo() == codigo)
                .findFirst()
                .orElse(null);
    }
